{
  "name": "@nsis/nlf-cli",
  "version": "0.8.3",
  "description": "CLI tool to convert NSIS Language Files to JSON and vice versa",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "release": "np --no-yarn",
    "start": "rollup --watch --config",
    "test": "uvu tests"
  },
  "files": [
    "bin/",
    "types/",
    "index.mjs",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "nlf": "./index.mjs"
  },
  "type": "module",
  "typings": "types/",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-nlf-cli.git"
  },
  "keywords": [
    "nsis",
    "nsis language file",
    "converter"
  ],
  "dependencies": {
    "@nsis/nlf": "^0.10.4",
    "commander": "^7.2.0",
    "get-stdin": "^9.0.0",
    "log-symbols": "^4.1.0",
    "update-notifier": "5.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-plugin-json": "^3.1.0",
    "execa": "^6.1.0",
    "globby": "^13.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^1.0.1",
    "rollup": "^2.75.7",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
