{
	"name": "@nsis/nlf-cli",
	"version": "0.10.0",
	"description": "CLI tool to convert NSIS Language Files to JSON and vice versa",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --production",
		"lint:publint": "publint",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:npm": "np --any-branch",
		"test": "uvu -r tsm tests"
	},
	"files": [
		"bin/",
		"types/",
		"index.mjs",
		"LICENSE",
		"README.md"
	],
	"bin": {
		"nlf": "./index.mjs"
	},
	"type": "module",
	"typings": "bin/cli.d.ts",
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-nlf-cli.git"
	},
	"keywords": [
		"nsis",
		"nsis language file",
		"converter"
	],
	"dependencies": {
		"@nsis/nlf": "^0.12.0",
		"commander": "^11.1.0",
		"get-stdin": "^9.0.0",
		"log-symbols": "^6.0.0",
		"update-notifier": "7.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.6.2",
		"concurrently": "^9.2.1",
		"glob": "^11.0.3",
		"knip": "^5.65.0",
		"np": "^10.2.0",
		"publint": "^0.3.14",
		"execa": "^8.0.1",
		"globby": "^14.0.0",
		"tsdown": "^0.15.6",
		"tsm": "^2.3.0",
		"uvu": "^0.5.6"
	}
}
