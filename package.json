{
  "name": "@nsis/nlf-cli",
  "version": "0.7.0",
  "description": "CLI tool to convert NSIS Language Files to JSON and vice versa",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "test": "ava ./test/default.mjs --verbose"
  },
  "files": [
    "bin/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "nlf": "./index.mjs"
  },
  "type": "module",
  "typings": "types/",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-nlf-cli.git"
  },
  "keywords": [
    "nsis",
    "nsis language file",
    "converter"
  ],
  "dependencies": {
    "@nsis/nlf": "^0.10.0",
    "commander": "^7.2.0",
    "get-stdin": "^8.0.0",
    "log-symbols": "^4.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.22",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "ava": "^4.0.1",
    "eslint": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "glob": "^7.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "rollup": "^2.67.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
